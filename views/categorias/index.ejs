<%- include('../header') %>

<a class="btn btn-light" href="/categorias/nova">Nova Categoria</a><br />
<a class="btn btn-light" href="/publicacoes/nova">Nova Publicação</a><br />

<table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Categoria</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
    <% categorias.forEach(categoria => { %>
      <tr>
        <td>
          <a href="/publicacoes/categoria/<%= categoria.id %>">
            <%= categoria.categoria %>
          </a>
        </td>
        <td>
            <a href="/categorias/Excluir/<%= categoria.id%>">Excluir</a>
            <a href="/categorias/Editar/<%= categoria.id%>">Editar</a><br />
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>

<%- include('../footer') %>