
<%- include('../header') %>
<form method="POST" action="/publicacoes/Editar/<%= categoria %>/ <%= publicacao.id %>">
    <div class="form-group">
        <label for="titulo">Título</label>
        <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Digite o Título" value="<%= publicacao.titulo %>">
    </div>
    <div class="form-group">
            <label for="conteudo">Conteúdo</label>
            <textarea type="text" class="form-control" id="conteudo" name="conteudo" placeholder="Digite a categoria"><%= publicacao.conteudo %></textarea>
        </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<%- include('../footer') %>