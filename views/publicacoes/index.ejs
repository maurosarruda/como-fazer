<%- include('../header') %>

<a class="btn btn-light" href="/publicacoes/nova">Nova Publicação</a><br /><br />

<table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col">Publicação</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
    <% publicacoes.forEach(publicacao => { %>
      <tr>
        <td><%= publicacao.titulo %></td>
        <td>
            <a href="/publicacoes/Excluir/<%= categoria %>/<%= publicacao.id %>">Excluir</a>
            <a href="/publicacoes/Editar/<%= categoria %>/<%= publicacao.id %>">Editar</a><br />
        </td>
      </tr>
    <% }) %>
    </tbody>
  </table>

<%- include('../footer') %>